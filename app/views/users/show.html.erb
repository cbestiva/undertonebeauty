                    <p>Name: <%= product.name %><br />
                    Review/Comment: <%= product.review %></p>
                  </div>
                  <div id="edit_button">
                    <a href="/products/<%= product.id %>/edit">Edit</a>
                    <%#= render "products/edit_product_modal" %>
                    <!-- <a href="<%#= edit_product_path(product) %> #edit_product" data-toggle="modal" data-target="#edit_product">Edit</a> -->
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>

      </div>
    </div>
  </div>
</div>