<div class="modal fade" id="edit_product" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h2 class="product_modal_title">Edit Product</h2>
      </div>
      <div class="modal-body" id="product_modal_form">
        <%= render :partial => "products/form", :product => @product %>
      </div>
    </div>
  </div>
</div>