<%= form_for @product do |f| %>
  <div>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "form-control", :placeholder => @product.name %>
  </div>
  <div>
    <%= f.label "Category" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Select One" %>
  </div>
  <div>
    <%= f.label "Review/Comment" %><br />
    <%= f.text_area :review, :class => "form-control" %>
  </div><br />
  <div class="btn_div"><%= f.submit :class =>"btn btn-sm btn-primary" %></div>
<% end %>